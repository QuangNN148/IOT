{
  "info": {
    "name": "IoT Project API",
    "description": "API Documentation for IoT Smart Home Project with ESP32, Node.js, React, MQTT, and Socket.IO",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "iot-project-api-collection",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Sensor APIs",
      "item": [
        {
          "name": "Get Latest Sensor Data",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/sensors/latest",
              "host": ["{{base_url}}"],
              "path": ["sensors", "latest"]
            },
            "description": "Lấy dữ liệu sensor mới nhất (nhiệt độ, độ ẩm, ánh sáng)"
          },
          "response": []
        },
        {
          "name": "Get Sensor History - All Data",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/sensors/history?limit=100",
              "host": ["{{base_url}}"],
              "path": ["sensors", "history"],
              "query": [
                {
                  "key": "limit",
                  "value": "100",
                  "description": "Number of records to return"
                }
              ]
            },
            "description": "Lấy tất cả lịch sử sensor data"
          },
          "response": []
        },
        {
          "name": "Get Sensor History - Filter by Temperature",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/sensors/history?dataType=temp&sortBy=temperature&sortOrder=DESC&limit=50",
              "host": ["{{base_url}}"],
              "path": ["sensors", "history"],
              "query": [
                {
                  "key": "dataType",
                  "value": "temp",
                  "description": "Filter by temperature"
                },
                {
                  "key": "sortBy",
                  "value": "temperature",
                  "description": "Sort by temperature"
                },
                {
                  "key": "sortOrder",
                  "value": "DESC",
                  "description": "Sort order"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            },
            "description": "Lọc và sắp xếp theo nhiệt độ"
          },
          "response": []
        },
        {
          "name": "Get Sensor History - Search by Keyword",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/sensors/history?search=27&limit=50",
              "host": ["{{base_url}}"],
              "path": ["sensors", "history"],
              "query": [
                {
                  "key": "search",
                  "value": "27",
                  "description": "Search keyword"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            },
            "description": "Tìm kiếm sensor data theo từ khóa"
          },
          "response": []
        }
      ]
    },
